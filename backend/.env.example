FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000
CORS_ORIGINS=http://localhost:5173

# Database
DATABASE_URL=postgresql://admin_dev:admin@localhost:5432/dev_db

# SendGrid Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
CONTACT_EMAIL=your-email@example.com

# JWT Authentication Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_COOKIE_SECURE=False  # Set to True in production (HTTPS only)

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_WHITELIST=sabala144@gmail.com

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf

# Storage Configuration
# Options: 'local' (development) or 's3' (production)
STORAGE_BACKEND=local

# AWS S3 Configuration (required when STORAGE_BACKEND=s3)
# Create IAM user with S3 access and add credentials here
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-bucket-name
AWS_REGION=us-east-1
